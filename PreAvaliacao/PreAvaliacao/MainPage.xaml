<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PreAvaliacao.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
               Text="JO KEN PO"
               Style="{StaticResource Headline}"
                SemanticProperties.Hint="JO KEN PO"
            />

            <Picker
                x:Name="PickerDecider"
                Title="Selecione sua jogada">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Pedra</x:String>
                        <x:String>Papel</x:String>
                        <x:String>Tesoura</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            

            <Button
                x:Name="BtnPlay"
                Text="Jogar"
                SemanticProperties.Hint="Jogar"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
